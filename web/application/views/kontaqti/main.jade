extends ../index
block content
	script.
		function initialize() {
			var mapOptions = {
				center: new google.maps.LatLng(41.737362, 44.782135),
				zoom: 17,
				mapTypeId: google.maps.MapTypeId.ROADMAP
			};
			var map = new google.maps.Map(document.getElementById('map'), mapOptions);
			var marker = new google.maps.Marker({
				map : map,
				position : new google.maps.LatLng(41.737362, 44.782135)
			});
			var infowindow = new google.maps.InfoWindow({
				content : "<span style='font-size: 18px; font-weight: bold'>სათაო ოფისი</span> <br/>" +
				"შ.პ.ს \"კასა ჯი\" <br/>" +
				"აკ. წერეთლის გამზ. #77 <br/>"+
				"თბილისი, საქართველო <br/>"+
				"ე-ფოსტა: info@kasa.ge <br/>"+
				"ტელ: 032 242 45 45 <br/>"
			});
			google.maps.event.addListener(marker, "click", function () {
				infowindow.open(map, marker);
			});
			infowindow.open(map, marker);
		}
		google.maps.event.addDomListener(window, 'load', initialize);
	div.col-md-5
		div.panel.panel-primary
			div.panel-heading
				h4.text-center სათაო ოფისი (თბილისი)
			div.panel-body
				h4.text-bold გაყიდვების განყოფილება
				p ე-ფოსტა: sale@kasa.ge
				h4.text-bold ტექნიკური განყოფილება
				p ე-ფოსტა: tech@kasa.ge
				h4.text-bold ზოგადი ინფორმაცია
				p ე-ფოსტა: info@kasa.ge
				p ტელ: 599 36 22 88; 577 11 40 41; 574 81 88 11;
	div.col-md-7
		div#map(style="width:100%;height:400px;")